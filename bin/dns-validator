#!/usr/bin/env php
<?php

require __DIR__ . '/../vendor/autoload.php';

$factory = new \DnsValidator\Factory\ResourceRecordFactory();
//$record = $factory->create('test.nl', 60, 'A', '127.0.0.1');
//
//$record->validate();


$collection = new \DnsValidator\Collection\ResourceRecordCollection();
$collection->addItem($factory->create('test.nl', 60, 'A', '127.0.0.1'));
$collection->addItem($factory->create('test2.nl', 60, 'A', '127.0.0.1'));
$collection->addItem($factory->create('test3.nl', 60, 'A', '127.0.0.1'));

$zone = new \DnsValidator\Entity\Zone('test.nl', $collection);

print_r($zone->validate());